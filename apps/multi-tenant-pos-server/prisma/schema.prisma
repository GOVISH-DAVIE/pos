datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Business {
  address   String?
  clients   Client[]
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  name      String?
  owner     String?
  products  Product[]
  sales     Sale[]
  updatedAt DateTime  @updatedAt
}

model Product {
  business   Business? @relation(fields: [businessId], references: [id])
  businessId String?
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  name       String?
  price      Float?
  sales      Sale[]
  updatedAt  DateTime  @updatedAt
}

model Client {
  business   Business? @relation(fields: [businessId], references: [id])
  businessId String?
  createdAt  DateTime  @default(now())
  email      String?
  id         String    @id @default(cuid())
  name       String?
  phone      String?
  updatedAt  DateTime  @updatedAt
}

model User {
  createdAt DateTime      @default(now())
  email     String?       @unique
  firstName String?
  id        String        @id @default(cuid())
  lastName  String?
  password  String
  role      EnumUserRole?
  roles     Json
  updatedAt DateTime      @updatedAt
  username  String        @unique
}

model Sale {
  business     Business? @relation(fields: [businessId], references: [id])
  businessId   String?
  createdAt    DateTime  @default(now())
  id           String    @id @default(cuid())
  product      Product?  @relation(fields: [productId], references: [id])
  productId    String?
  quantitySold Int?
  saleDate     DateTime?
  updatedAt    DateTime  @updatedAt
}

enum EnumUserRole {
  Option1
}
